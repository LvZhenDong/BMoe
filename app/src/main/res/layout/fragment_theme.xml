<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_theme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <RadioGroup
        android:id="@+id/rg_theme"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/rb_theme_pink"
            style="@style/ThemeRadioButton"
            android:background="@drawable/selector_item_theme_pink_rb"
            android:textColor="@color/selector_theme_rb_pink"/>

        <RadioButton
            android:id="@+id/rb_theme_purple"
            style="@style/ThemeRadioButton"
            android:background="@drawable/selector_item_theme_purple_rb"
            android:textColor="@color/selector_theme_rb_purple"/>
    </RadioGroup>
</LinearLayout>
