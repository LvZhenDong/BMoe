<resources>

    <style name="Theme.MyDemo" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/AnimActivity</item>
    </style>

    <!--Activity跳转时的动画-->
    <style name="AnimActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/open_slide_in</item>
        <item name="android:activityOpenExitAnimation">@anim/open_slide_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/close_slide_in</item>
        <item name="android:activityCloseExitAnimation">@anim/close_slide_out</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.MyDemo">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="CampListViewItemText">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Button">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="RoundButton" parent="Button">
        <item name="android:background">@drawable/selector_btn</item>
    </style>

    <style name="RectButton" parent="Button">
        <item name="android:background">@drawable/selector_rect_btn</item>
    </style>

    <style name="SexRadioButton">
        <item name="android:button">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/selector_sex_radio_button_color</item>
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>
